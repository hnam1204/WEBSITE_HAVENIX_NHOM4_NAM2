@* ================================
        HAVENIX ADMIN LAYOUT - DARK MODE AUTO SAVE + FIX FULL
    ================================ *@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Havenix Admin</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        :root {
            --primary: #00C4B4;
            --primary-dark: #00a89a;
            --primary-light: #C8EEF5;
            --sidebar-bg: linear-gradient(180deg, #00D4C4 0%, #00A89A 100%);
            --sidebar-width: 260px;
            --transition: all 0.35s ease;
            --radius: 14px;
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: #f8fbff;
            color: #2d3748;
            min-height: 100vh;
            transition: var(--transition);
            overflow-x: hidden;
        }

        /* SIDEBAR */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: var(--sidebar-width);
            height: 100vh;
            background: var(--sidebar-bg);
            color: white;
            padding: 25px 15px;
            overflow-y: auto;
            z-index: 1000;
            transition: var(--transition);
            box-shadow: 4px 0 20px rgba(0, 196, 180, 0.2);
        }

            .sidebar h2 {
                text-align: center;
                margin: 0 0 45px 0;
                font-weight: 800;
                font-size: 26px;
                letter-spacing: 2px;
                color: white;
                text-shadow: 0 2px 10px rgba(0,0,0,0.3);
            }

            .sidebar a {
                display: flex;
                align-items: center;
                gap: 14px;
                padding: 14px 20px;
                margin-bottom: 6px;
                color: white;
                text-decoration: none;
                border-radius: 12px;
                font-weight: 500;
                transition: var(--transition);
            }

                .sidebar a i {
                    width: 22px;
                    text-align: center;
                    font-size: 18px;
                }

                .sidebar a:hover {
                    background: rgba(255,255,255,0.25);
                    transform: translateX(10px);
                }

                .sidebar a.active {
                    background: rgba(255,255,255,0.35);
                    font-weight: 700;
                    transform: translateX(10px);
                }

        /* MAIN CONTENT */
        .admin-content {
            margin-left: var(--sidebar-width);
            padding: 30px;
            min-height: 100vh;
            transition: var(--transition);
        }

        .admin-header {
            background: white;
            padding: 22px 30px;
            border-radius: var(--radius);
            box-shadow: 0 6px 25px rgba(0,196,180,0.12);
            font-size: 26px;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 14px;
        }

        .card-box {
            background: white;
            padding: 28px;
            border-radius: var(--radius);
            box-shadow: 0 6px 25px rgba(0,0,0,0.08);
            border: 1px solid #e6f4f9;
            transition: var(--transition);
        }

            .card-box:hover {
                transform: translateY(-6px);
                box-shadow: 0 15px 40px rgba(0,196,180,0.18);
            }

        /* MOBILE SIDEBAR */
        .mobile-toggle {
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1100;
            background: var(--primary);
            color: white;
            border: none;
            width: 52px;
            height: 52px;
            border-radius: 50%;
            font-size: 22px;
            cursor: pointer;
            box-shadow: 0 6px 20px rgba(0,196,180,0.4);
        }

        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 999;
            opacity: 0;
            visibility: hidden;
            transition: var(--transition);
        }

            .sidebar-overlay.active {
                opacity: 1;
                visibility: visible;
            }

        @@media (max-width: 992px) {
            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .admin-content {
                margin-left: 0;
            }
        }

        /* DARK MODE BUTTON */
        .dark-mode-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1100;
            background: white;
            border: 2px solid #eee;
            width: 56px;
            height: 56px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

            .dark-mode-toggle:hover {
                background: var(--primary);
                color: white;
                border-color: var(--primary);
                transform: scale(1.1);
            }

        /* Icon chuyển đổi */
        body.dark-mode .dark-mode-toggle i:before {
            content: "\f185"; /* icon mặt trời */
        }

        /* DARK MODE CSS */
        body.dark-mode {
            background: #0f172a;
            color: #e2e8f0;
        }

            body.dark-mode .admin-header,
            body.dark-mode .card-box {
                background: #1e293b;
                border-color: #334155;
                color: #e2e8f0;
            }

            body.dark-mode .sidebar {
                background: linear-gradient(180deg, #008f84 0%, #006d63 100%);
            }
    </style>

    @RenderSection("Head", required: false)
</head>

<body>

    <!-- Mobile sidebar overlay -->
    <div class="sidebar-overlay"></div>

    <!-- Sidebar Toggle -->
    <button class="mobile-toggle d-lg-none" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Dark Mode Button -->
    <div class="dark-mode-toggle" onclick="toggleDarkMode()">
        <i class="fas fa-moon"></i>
    </div>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <h2>HAVENIX</h2>

        <a href="/Admin/Dashboard"><i class="fa-solid fa-chart-pie"></i> Dashboard</a>
        <a href="/AdminCategory/Index"><i class="fa-solid fa-tags"></i> Danh mục</a>
        <a href="/AdminProduct/Index"><i class="fa-solid fa-shirt"></i> Sản phẩm</a>
        <a href="/AdminCustomer/Index"><i class="fa-solid fa-users"></i> Khách hàng</a>
        <a href="/Admin/Accounts"><i class="fa-solid fa-user-gear"></i> Tài khoản</a>
        <a href="/AdminOrder/Index"><i class="fa-solid fa-receipt"></i> Đơn hàng</a>
        <a href="/AdminBank/Index"><i class="fa-solid fa-qrcode"></i> Xác minh ngân hàng</a>
        <a href="/AdminBank/History"><i class="fa-solid fa-clock-rotate-left"></i> Lịch sử ngân hàng</a>
        <a href="/Admin/Logs"><i class="fa-solid fa-list-check"></i> Nhật ký</a>
        <a href="/Admin/CreateNotification"><i class="fa-solid fa-bell"></i> Thông báo đến người dùng</a>
        <a href="/Admin/Notifications"><i class="fa-solid fa-envelope"></i> Tin nhắn Thông báo</a>
        <a href="/Admin/Reviews"><i class="fa-solid fa-star"></i> Quản lý đánh giá</a>
        <a href="/Admin/Logout"><i class="fa-solid fa-right-from-bracket"></i> Đăng xuất</a>
    </div>

    <!-- MAIN CONTENT -->
    <div class="admin-content">
        <div class="admin-header">
            <i class="fas fa-crown"></i>
            Havenix Admin Panel
        </div>

        @RenderBody()
    </div>

    <!-- SCRIPT: Sidebar + Dark Mode -->
    <script>
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('active');
            document.querySelector('.sidebar-overlay').classList.toggle('active');
        }

        // Khi load trang → đọc Dark Mode từ localStorage
        if (localStorage.getItem("HAVENIX_DARK_MODE") === "on") {
            document.body.classList.add("dark-mode");
        }

        function toggleDarkMode() {
            document.body.classList.toggle("dark-mode");

            // Lưu trạng thái
            if (document.body.classList.contains("dark-mode")) {
                localStorage.setItem("HAVENIX_DARK_MODE", "on");
            } else {
                localStorage.setItem("HAVENIX_DARK_MODE", "off");
            }
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
