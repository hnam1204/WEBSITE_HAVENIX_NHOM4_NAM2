@{
    ViewData["Title"] = "Xác nhận mã khôi phục";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="account-container">

        <h2>Xác nhận mã</h2>
        <p>Mã xác nhận đã được gửi đến email của bạn. Vui lòng nhập mã 6 ký tự bên dưới.</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert-danger">@ViewBag.Error</div>
        }

        <div class="alert-info">
            Mã có hiệu lực trong <strong>10 phút</strong>. Kiểm tra cả mục Spam/Junk nếu cần.
        </div>

        <form asp-action="Verify" asp-controller="ForgotPassword" method="post">
            @Html.AntiForgeryToken()

            <label>Mã xác nhận (6 ký tự)</label>
            <input type="text"
                   name="code"
                   class="form-control"
                   placeholder="HAVENIX"
                   maxlength="6"
                   autocomplete="off"
                   required
                   autofocus />

            <button type="submit" class="login-btn">Xác nhận mã</button>
        </form>

        <a href="@Url.Action("Index", "ForgotPassword")" class="resend-link">
            Gửi lại mã xác nhận
        </a>
    </div>

</body>
</html>
<style>
    body {
        background: linear-gradient(135deg, #e0f7fa, #b2ebf2);
        min-height: 100vh;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        margin: 0;
    }

    .account-container {
        max-width: 460px;
        margin: 60px auto;
        padding: 45px 40px;
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 15px 45px rgba(0, 0, 0, 0.12);
        text-align: center;
    }

        .account-container h2 {
            font-size: 29px;
            font-weight: 700;
            color: #006064;
            margin: 0 0 10px 0;
        }

        .account-container p {
            color: #555;
            font-size: 15px;
            line-height: 1.6;
            margin: 16px 0 32px 0;
        }

        .account-container label {
            display: block;
            text-align: left;
            margin: 22px 0 8px;
            font-weight: 600;
            color: #333;
            font-size: 15px;
        }

        .account-container .form-control {
            width: 100%;
            padding: 15px 16px;
            border: 1.5px solid #b2ebf2;
            border-radius: 12px;
            background: #f8fdfe;
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            letter-spacing: 8px;
            text-transform: uppercase;
            transition: all 0.3s;
            box-sizing: border-box;
        }

            .account-container .form-control:focus {
                outline: none;
                border-color: #00acc1;
                background: #ffffff;
                box-shadow: 0 0 0 4px rgba(0, 172, 193, 0.18);
            }

    .login-btn {
        width: 100%;
        padding: 16px;
        background: #00acc1;
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 17px;
        font-weight: 700;
        cursor: pointer;
        transition: background 0.3s;
        margin-top: 20px;
    }

        .login-btn:hover {
            background: #00838f;
        }

    .alert-danger {
        background: #ffebee;
        color: #c62828;
        padding: 14px 16px;
        border-radius: 12px;
        margin-bottom: 20px;
        font-size: 14.5px;
        border: 1px solid #ffcdd2;
        text-align: left;
    }

    .alert-info {
        background: #e3f2fd;
        color: #1565c0;
        padding: 14px 16px;
        border-radius: 12px;
        margin-bottom: 24px;
        font-size: 14.5px;
        border: 1px solid #bbdefb;
        text-align: left;
    }

    .resend-link {
        display: block;
        margin-top: 28px;
        color: #00acc1;
        font-size: 15px;
        font-weight: 600;
        text-decoration: none;
    }

        .resend-link:hover {
            text-decoration: underline;
        }

    @@media (max-width: 480px) {
        .account-container {
            margin: 30px 18px;
            padding: 40px 30px;
        }

            .account-container .form-control {
                font-size: 22px;
                letter-spacing: 6px;
            }
    }
</style>