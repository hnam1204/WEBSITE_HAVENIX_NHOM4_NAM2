@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <div class="account-container">
        <h2>Đặt lại mật khẩu</h2>
        <p>Vui lòng nhập mật khẩu mới cho tài khoản của bạn.</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert-danger">@ViewBag.Error</div>
        }

        <div class="alert-success">
            Mã xác nhận hợp lệ! Bạn có thể đặt mật khẩu mới ngay bây giờ.
        </div>

        <form asp-action="ResetPassword" asp-controller="ForgotPassword" method="post" id="resetForm">
            @Html.AntiForgeryToken()

            <label>Mật khẩu mới</label>
            <div class="input-group">
                <input type="password" name="password" id="password" class="form-control"
                       placeholder="Nhập mật khẩu mới" minlength="6" required autocomplete="new-password" />
                <button type="button" class="toggle-password" onclick="togglePassword('password')">
                    <i class="fas fa-eye" id="eye-password"></i>
                </button>
            </div>
            <div class="note">Tối thiểu 6 ký tự</div>

            <label style="margin-top: 20px;">Xác nhận mật khẩu</label>
            <div class="input-group">
                <input type="password" name="confirmPassword" id="confirmPassword" class="form-control"
                       placeholder="Nhập lại mật khẩu mới" minlength="6" required autocomplete="new-password" />
                <button type="button" class="toggle-password" onclick="togglePassword('confirmPassword')">
                    <i class="fas fa-eye" id="eye-confirmPassword"></i>
                </button>
            </div>

            <button type="submit" class="login-btn">Đổi mật khẩu</button>
        </form>

        <a href="@Url.Action("Login", "Account")" class="back-link">
            Quay lại đăng nhập
        </a>
    </div>

    <script>
        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const icon = document.getElementById('eye-' + fieldId);
            if (field.type === 'password') {
                field.type = 'text';
                icon.classList.replace('fa-eye', 'fa-eye-slash');
            } else {
                field.type = 'password';
                icon.classList.replace('fa-eye-slash', 'fa-eye');
            }
        }

        // Kiểm tra 2 mật khẩu có trùng nhau không
        document.getElementById('resetForm').addEventListener('submit', function (e) {
            const pass = document.getElementById('password').value;
            const confirm = document.getElementById('confirmPassword').value;
            if (pass !== confirm) {
                e.preventDefault();
                alert('Mật khẩu xác nhận không trùng khớp!');
            }
        });
    </script>

    <!-- Font Awesome cho icon mắt -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

</body>
</html>
<style>
    body {
        background: linear-gradient(135deg, #e0f7fa, #b2ebf2);
        min-height: 100vh;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        margin: 0;
    }

    .account-container {
        max-width: 460px;
        margin: 60px auto;
        padding: 45px 40px;
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 15px 45px rgba(0, 0, 0, 0.12);
        text-align: center;
    }

        .account-container h2 {
            font-size: 29px;
            font-weight: 700;
            color: #006064;
            margin: 0 0 10px 0;
        }

        .account-container p {
            color: #555;
            font-size: 15px;
            line-height: 1.6;
            margin: 16px 0 32px 0;
        }

        .account-container label {
            display: block;
            text-align: left;
            margin: 22px 0 8px;
            font-weight: 600;
            color: #333;
            font-size: 15px;
        }

    .input-group {
        display: flex;
        margin-bottom: 8px;
    }

    .account-container .form-control {
        flex: 1;
        width: 100%;
        padding: 15px 16px;
        border: 1.5px solid #b2ebf2;
        border-radius: 12px 0 0 12px;
        background: #f8fdfe;
        font-size: 16px;
        transition: all 0.3s;
        box-sizing: border-box;
    }

        .account-container .form-control:focus {
            outline: none;
            border-color: #00acc1;
            background: #ffffff;
            box-shadow: 0 0 0 4px rgba(0, 172, 193, 0.18);
        }

    .toggle-password {
        width: 56px;
        padding: 0;
        border: 1.5px solid #b2ebf2;
        border-left: none;
        border-radius: 0 12px 12px 0;
        background: #f8fdfe;
        color: #666;
        cursor: pointer;
        transition: all 0.3s;
    }

        .toggle-password:hover {
            background: #e0f7fa;
        }

        .toggle-password:focus {
            outline: none;
            border-color: #00acc1;
            box-shadow: 0 0 0 4px rgba(0, 172, 193, 0.18);
        }

    .login-btn {
        width: 100%;
        padding: 16px;
        background: #00acc1;
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 17px;
        font-weight: 700;
        cursor: pointer;
        transition: background 0.3s;
        margin-top: 20px;
    }

        .login-btn:hover {
            background: #00838f;
        }

    .alert-danger {
        background: #ffebee;
        color: #c62828;
        padding: 14px 16px;
        border-radius: 12px;
        margin-bottom: 20px;
        font-size: 14.5px;
        border: 1px solid #ffcdd2;
        text-align: left;
    }

    .alert-success {
        background: #e8f5e9;
        color: #2e7d32;
        padding: 14px 16px;
        border-radius: 12px;
        margin-bottom: 24px;
        font-size: 14.5px;
        border: 1px solid #c8e6c9;
        text-align: left;
    }

    .note {
        margin-top: 12px;
        color: #777;
        font-size: 14px;
    }

    .back-link {
        display: block;
        margin-top: 28px;
        color: #00acc1;
        font-size: 15px;
        font-weight: 600;
        text-decoration: none;
    }

        .back-link:hover {
            text-decoration: underline;
        }

    @@media (max-width: 480px) {
        .account-container {
            margin: 30px 18px;
            padding: 40px 30px;
        }
    }
</style>