@model HV_NIX.Models.Products

@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
}

<h2 class="mb-3">Chỉnh sửa sản phẩm</h2>

@using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ProductID)

    <div class="form-group">
        <label>Tên sản phẩm</label>
        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
    </div>

    <div class="form-group mt-2">
        <label>Mô tả</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
    </div>

    <div class="form-group mt-2">
        <label>Giá</label>
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number" })
    </div>

    @* Nếu bạn có Stock thì để lại, nếu không có thì xóa *@
    <!--
    <div class="form-group mt-2">
        <label>Số lượng tồn kho</label>
        @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", type = "number" })
    </div>
    -->

    <div class="form-group mt-2">
        <label>Danh mục</label>
        <select name="CategoryID" class="form-control">
            @foreach (var cat in ViewBag.Categories)
            {
                <option value="@cat.CategoryID" @(cat.CategoryID == Model.CategoryID ? "selected" : "")>
                    @cat.CategoryName
                </option>
            }
        </select>
    </div>

    <hr />

    <h4>Ảnh hiện tại</h4>
    <div class="row">
        <div class="col-md-4">
            <label>Thumbnail</label><br />
            <img src="~/Content/Images/@Model.Thumbnail" style="width:120px;border:1px solid #ccc" />
        </div>
        <div class="col-md-4">
            <label>Image 1</label><br />
            <img src="~/Content/Images/@Model.Image1" style="width:120px;border:1px solid #ccc" />
        </div>
        <div class="col-md-4">
            <label>Image 2</label><br />
            <img src="~/Content/Images/@Model.Image2" style="width:120px;border:1px solid #ccc" />
        </div>
    </div>

    <h4 class="mt-3">Cập nhật ảnh mới (nếu muốn)</h4>
    <div class="form-group">
        <label>Thumbnail mới</label>
        <input type="file" name="ThumbnailFile" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Image1 mới</label>
        <input type="file" name="Image1File" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Image2 mới</label>
        <input type="file" name="Image2File" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Lưu thay đổi</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Quay lại</a>
}
