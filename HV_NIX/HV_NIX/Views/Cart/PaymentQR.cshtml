@model HV_NIX.Models.Orders
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thanh toán đơn hàng #" + Model.OrderID;
}

<link href="~/Content/payment-qr-final.css" rel="stylesheet" />

<div class="payment-wrapper">
    <div class="payment-card">

        <!-- Header -->
        <div class="header">
            <h2>Thanh toán đơn hàng #@Model.OrderID</h2>
            <p>Tổng tiền cần thanh toán</p>
            <div class="amount">@String.Format("{0:N0}", ViewBag.Amount) ₫</div>
        </div>

        <!-- QR Code siêu đẹp -->
        <div class="qr-container">
            <div class="qr-frame">
                <img src="@ViewBag.QR" alt="QR Thanh toán" class="qr-image" />
                <!-- Nếu bạn muốn thêm logo ngân hàng nhỏ ở giữa QR -->
                <!-- <img src="~/Content/images/vietcombank-logo.png" class="bank-logo" /> -->
            </div>
            <small>Quét mã bằng ứng dụng ngân hàng</small>
        </div>

        <!-- Nội dung chuyển khoản -->
        <div class="transfer-info">
            <label>Nội dung chuyển khoản</label>
            <div class="content-box" id="contentText">@ViewBag.Content</div>
            <button class="btn-copy" onclick="copyContent()">
                <span>Sao chép nội dung</span>
            </button>
        </div>

        <!-- Ghi chú -->
        <div class="note">
            Hệ thống tự động xác nhận trong vòng <b>1-3 phút</b> sau khi chuyển khoản thành công.
        </div>

        <!-- Các nút hành động -->
        <div class="action-buttons">
            <button class="btn-primary" onclick="checkPayment()">
                Tôi đã chuyển khoản xong
            </button>
            <a href="/" class="btn-secondary">
                Quay lại trang chủ
            </a>
        </div>

        <!-- Loading khi đang kiểm tra -->
        <div class="checking-hint" id="checkingHint" style="display:none;">
            Đang kiểm tra thanh toán...
        </div>
    </div>
</div>

@section scripts {
    <script>
    function copyContent() {
        navigator.clipboard.writeText('@ViewBag.Content');
        alert('Đã sao chép nội dung chuyển khoản!');
    }

    // Kiểm tra thanh toán tự động mỗi 5 giây
    setInterval(() => {
        $.get("/Cart/CheckPaymentStatus", { id: @Model.OrderID }, function (res) {
            console.log("Status:", res.status);

            if (res.status === "Paid") {
                document.getElementById('checkingHint').innerHTML = "Thanh toán thành công!";
                document.getElementById('checkingHint').style.display = 'block';

                setTimeout(() => {
                    window.location.href = "/Cart/ThankYou/@Model.OrderID";
                }, 1500);
            }
        });
    }, 5000);

    // Nút “Tôi đã chuyển khoản xong”
 function checkPayment() {
    document.getElementById('checkingHint').style.display = 'block';
    document.getElementById('checkingHint').innerHTML = "Đang chuyển trang...";

    setTimeout(() => {
        window.location.href = "/Cart/ThankYou/@Model.OrderID";
    }, 1500);
}
    </script>
}


