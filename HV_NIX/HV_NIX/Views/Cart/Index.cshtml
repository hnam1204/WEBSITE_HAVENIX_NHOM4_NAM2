@model List<HV_NIX.Models.CartItems>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal total = (decimal)ViewBag.TotalAmount;
}
<link rel="stylesheet" href="~/Content/cart.css" />

<main class="cart-container">
    <h1 class="cart-title">Giỏ Hàng Của Bạn</h1>
    @if (!Model.Any())
    {
        <div class="cart-empty">
            <img src="https://cdn-icons-png.flaticon.com/128/15737/15737380.png"
                 alt="Empty Cart" class="empty-cart-icon" />

            <h2>Giỏ hàng trống</h2>
            <p>Bạn chưa có sản phẩm nào trong giỏ hàng</p>

            <a href="/Product" class="btn-primary">Mua sắm ngay</a>
        </div>

        return;
    }

    <div class="cart-content">

        <!-- DANH SÁCH ITEM -->
        <div class="cart-items">
            @foreach (var item in Model)
            {
                var img = Url.Content("~/Content/Images/" + item.Product.Thumbnail);

                <div class="cart-item" data-id="@item.CartItemID">
                    <img src="@img"
                         alt="@item.Product.ProductName"
                         onerror="this.onerror=null;this.src='/Content/Images/no-image.png';" />

                    <div class="cart-info">
                        <h4>@item.Product.ProductName</h4>
                        <p>Size: <strong>@item.Size</strong></p>
                        <p class="price">@item.Price.ToString("N0")₫</p>

                        <div class="quantity-control">
                            <button class="decrease">−</button>
                            <input type="text" class="quantity-input" value="@item.Quantity" readonly>
                            <button class="increase">+</button>
                        </div>
                    </div>

                    <form action="/Cart/Remove" method="post" class="remove-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.CartItemID" />
                        <button class="remove-btn">✖</button>
                    </form>
                </div>
            }
        </div>

        <!-- TÓM TẮT -->
        <div class="cart-summary">
            <h3>Tóm Tắt Đơn Hàng</h3>
            <div class="summary-row">
                <span>Tổng tiền:</span>
                <span id="totalAmount">@total.ToString("N0")₫</span>
            </div>

            <a href="/Cart/Checkout" class="btn-checkout">Thanh toán</a>
            <a href="/Product" class="continue-shopping">← Tiếp tục mua sắm</a>
        </div>

    </div>
</main>

@section Scripts {
    <script>
        function updateQty(id, quantity) {
            fetch('/Cart/UpdateQuantity', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `id=${id}&quantity=${quantity}`
            })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById("totalAmount").textContent =
                            Number(data.totalAmount).toLocaleString("vi-VN") + "₫";
                    }
                });
        }

        document.querySelectorAll(".cart-item").forEach(item => {
            const id = item.dataset.id;
            const input = item.querySelector(".quantity-input");
            const minus = item.querySelector(".decrease");
            const plus = item.querySelector(".increase");

            minus.onclick = () => {
                let q = parseInt(input.value);
                if (q > 1) { input.value = --q; updateQty(id, q); }
            };
            plus.onclick = () => {
                let q = parseInt(input.value);
                input.value = ++q; updateQty(id, q);
            };
        });
    </script>
}
<style>
    :root {
    --bg: #E8F3FF;
    --card: #FFFFFF;
    --primary: #2BAA67;
    --red: #E53935;
    --text: #1A365D;
    --text2: #4A5568;
    --radius: 20px;
    --shadow: 0 10px 25px rgba(0,0,0,0.08);
}

/* ============================== GLOBAL ============================== */

body {
    background: var(--bg);
    font-family: "Segoe UI", sans-serif;
}

.cart-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 20px;
}

.cart-title {
    text-align: center;
    font-size: 32px;
    font-weight: 800;
    color: var(--text);
    margin-bottom: 15px;
}

/* ============================== EMPTY CART ============================== */

.cart-empty {
    text-align: center;
    background: var(--card);
    padding: 45px 30px;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
}

.empty-cart-icon {
    width: 110px;
    height: 110px;
    opacity: 0.9;
    margin-bottom: 20px;
    animation: float 2.5s ease-in-out infinite;
}

@@keyframes float {
    0% { transform: translateY(0); }
    50% { transform: translateY(-6px); }
    100% { transform: translateY(0); }
}

.cart-empty h2 {
    font-size: 24px;
    color: var(--text);
    font-weight: 700;
}

.cart-empty p {
    color: var(--text2);
    margin-bottom: 20px;
    font-size: 16px;
}

.btn-primary {
    background: var(--primary);
    padding: 14px 28px;
    border-radius: 14px;
    color: white;
    font-size: 18px;
    font-weight: 700;
    text-decoration: none;
    display: inline-block;
    transition: 0.25s;
}

.btn-primary:hover {
    background: #249658;
}

/* ============================== LAYOUT ============================== */

.cart-content {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 25px;
}

@@media (max-width: 768px) {
    .cart-content {
        grid-template-columns: 1fr;
    }
}

/* ============================== CART ITEM ============================== */

.cart-items {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.cart-item {
    display: flex;
    align-items: center;
    background: var(--card);
    padding: 18px;
    border-radius: 18px;
    box-shadow: var(--shadow);
    gap: 15px;
}

.cart-item img {
    width: 90px;
    height: 90px;
    border-radius: 14px;
    object-fit: cover;
    flex-shrink: 0;
}

.cart-info {
    flex: 1;
}

.cart-info h4 {
    font-size: 17px;
    font-weight: 700;
    color: var(--text);
    margin: 0 0 5px;
}

.cart-info p {
    margin: 3px 0;
    color: var(--text2);
    font-size: 15px;
}

.price {
    color: var(--red);
    font-weight: 700;
    font-size: 17px;
    margin-top: 4px;
}

/* ============================== QUANTITY ============================== */

.quantity-control {
    display: flex;
    align-items: center;
    margin-top: 6px;
    gap: 10px;
}

.quantity-control button {
    width: 34px;
    height: 34px;
    background: #E2F6EE;
    border-radius: 50%;
    border: none;
    font-size: 20px;
    color: var(--primary);
    cursor: pointer;
    transition: 0.2s;
    font-weight: 700;
}

.quantity-control button:hover {
    background: #c8f1de;
}

.quantity-input {
    width: 55px;
    height: 34px;
    text-align: center;
    border-radius: 10px;
    border: 2px solid #ddd;
    font-weight: bold;
    background: white;
}

/* ============================== REMOVE BTN ============================== */

.remove-btn {
    background: none;
    border: none;
    font-size: 22px;
    color: #999;
    cursor: pointer;
    transition: 0.2s;
}

.remove-btn:hover {
    color: var(--red);
}

/* ============================== SUMMARY ============================== */

.cart-summary {
    background: var(--card);
    padding: 25px;
    border-radius: 18px;
    box-shadow: var(--shadow);
    height: fit-content;
}

.cart-summary h3 {
    font-size: 22px;
    font-weight: 700;
    margin-bottom: 20px;
    color: var(--text);
}

.summary-row {
    display: flex;
    justify-content: space-between;
    font-size: 18px;
    margin-bottom: 20px;
}

#totalAmount {
    color: var(--red);
    font-weight: 800;
    font-size: 22px;
}

.btn-checkout {
    width: 100%;
    display: block;
    text-align: center;
    background: var(--primary);
    color: white;
    padding: 16px;
    border-radius: 14px;
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 15px;
    transition: 0.25s;
}

.btn-checkout:hover {
    background: #249658;
}

.continue-shopping {
    text-align: center;
    display: block;
    color: var(--text2);
    font-size: 16px;
    text-decoration: none;
}

.continue-shopping:hover {
    text-decoration: underline;
}

</style>

